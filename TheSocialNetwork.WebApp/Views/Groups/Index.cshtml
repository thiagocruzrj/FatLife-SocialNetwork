@model IEnumerable<TheSocialNetwork.DomainModel.Entities.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Restaurants Reviews</h2>

<p>
    @Html.ActionLink("New Restaurant", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Join Group", "JoinGroup", new { id = item.Id }, new { @class = "btn btn-primary" })  
            @Html.ActionLink("Posts", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
