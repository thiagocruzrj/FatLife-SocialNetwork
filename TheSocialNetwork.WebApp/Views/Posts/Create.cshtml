@model TheSocialNetwork.DomainModel.Entities.Post

@{
    ViewBag.Title = "Create";
}

<h2>New Review</h2>


@using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
